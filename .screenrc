# My screen quick reference
#   C-a H : toggle logging
#   C-a [ : selection mode
#   C-a ? : show keybindings
startup_message off
defutf8         on
defscrollback   10000

# Status line
caption always "%{= wk} %-w%{= KW} [%n %t] %{-}%+w %= | @%H | %Y-%m-%d %c "

# Ctrl + right and left arrows
bindkey ^[[1;5D forward-word
bindkey ^[[1;5C backward-word

# Ctrl + Alt + right and left arrows
bindkey ^[[1;7D next
bindkey ^[[1;7C prev

# Clear scrollback for fullscreen applications
altscreen on

# Enable support for 256 colors
term "screen-256color"
