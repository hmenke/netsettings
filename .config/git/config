[advice]
	detachedHead = false
[alias]
	amend = commit --amend --no-edit
	bblame = blame -w -C -C -C
	changelog = log --date=short --pretty=format:'%ad %an\n\n    - %s\n'
	fake-rebase = rebase --exec='env NAME=\"$(git log -1 --format=%an)\" EMAIL=\"$(git log -1 --format=%ae)\" DATE=\"$(git log -1 --format=%ad)\" sh -c '\\''env GIT_AUTHOR_NAME=\"$NAME\" GIT_AUTHOR_EMAIL=\"$EMAIL\" GIT_AUTHOR_DATE=\"$DATE\" GIT_COMMITTER_NAME=\"$NAME\" GIT_COMMITTER_EMAIL=\"$EMAIL\" GIT_COMMITTER_DATE=\"$DATE\" git commit --amend --no-edit --no-gpg-sign'\\'
	fixup = "!f() { git log -n 50 --pretty=format:'%h %s' --no-merges | fzf --ansi --bind \"enter:become(git commit --fixup={1} $@)\"; }; f"
	force-push = push --force-with-lease --force-if-includes
	fzf = !fzf --disabled --bind 'start:reload:git grep -in --color=always {q} || :' --bind 'change:reload:git grep -in --color=always {q} || :' --ansi --delimiter : --nth 3 --preview 'bat --style=full --color=always --highlight-line {2} {1}' --preview-window '~4,+{2}+4/2'
	graph = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ai%Creset'
	root = rev-parse --show-toplevel
	setup = !git init && git commit --allow-empty -m \"Initial commit\"
	unstage = reset HEAD --
	ustash = -c commit.gpgsign=false stash
	dft = -c diff.external=difft diff
	idiff = difftool --tool idiff
[branch]
	autosetupmerge = true
[color "grep"]
	filename = magenta
	lineNumber = green
[core]
	untrackedcache = true
[credential]
	helper = libsecret
[delta]
	light = true
	color-only = true
	max-line-length = 4000
[diff]
	algorithm = histogram
	colorMoved = default
	ignoreSubmodules = dirty
	wsErrorHighlight = all
[difftool]
	prompt = false
[difftool "diffoscope"]
	cmd = "if [ $LOCAL = /dev/null ]; then diffoscope --new $REMOTE; else diffoscope $LOCAL $REMOTE; fi"
[diff "gpg"]
	binary = true
	textconv = gpg -d -q --yes --compress-algo=none --no-encrypt-to --batch --use-agent
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f
[gpg]
	program = gpg2
[grep]
	fallbackToNoIndex = true
	lineNumber = true
[gui]
	displayuntracked = false
	spellingdictionary = none
[init]
	defaultBranch = master
[instaweb]
	local = true
	httpd = python
[log]
	decorate = true
	excludeDecoration = refs/branchless/*
[maintenance "commit-graph"]
	enabled = true
[maintenance "prefetch"]
	enabled = true
[maintenance "gc"]
	enabled = true
[maintenance "loose-objects"]
	enabled = true
[maintenance "incremental-repack"]
	enabled = true
[maintenance "pack-refs"]
	enabled = true
[merge]
	autoStash = true
	conflictStyle = diff3
[pager]
	grep = false
[ps1]
	timeout = 0.5
[pull]
	ff = only
[push]
	default = current
	autoSetupRemote = true
[rebase]
	autosquash = true
	autoStash = true
	updateRefs = true
[rerere]
	enabled = true
[sendemail]
	annotate = yes
	confirm = always
[status]
	showUntrackedFiles = no
	submodulesummary = true
[url "ssh://git@github.com/"]
	pushInsteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
	pushInsteadOf = https://gitlab.com/
