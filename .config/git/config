[advice]
	detachedHead = false
[alias]
	changelog = log --date=short --pretty=format:'%ad %an\n\n    - %s\n'
	fixup = commit --amend --no-edit
	graph = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ai%Creset'
	root = rev-parse --show-toplevel
	setup = !git init && git commit --allow-empty -m \"Initial commit\"
	unstage = reset HEAD --
	# An unsigned version of stash
	ustash = -c commit.gpgsign=false stash
[branch]
	autosetupmerge = true
[color "grep"]
	filename = magenta
	lineNumber = green
[core]
	fsmonitor = true
	untrackedcache = true
[credential]
	helper = libsecret
[diff]
	algorithm = histogram
	colorMoved = default
	ignoreSubmodules = dirty
	wsErrorHighlight = all
[difftool]
	prompt = false
[difftool "diffoscope"]
	cmd = "if [ $LOCAL = /dev/null ]; then diffoscope --new $REMOTE; else diffoscope $LOCAL $REMOTE; fi"
[diff "gpg"]
	binary = true
	textconv = gpg -d -q --yes --compress-algo=none --no-encrypt-to --batch --use-agent
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f
[gpg]
	program = gpg2
[grep]
	fallbackToNoIndex = true
	lineNumber = true
[gui]
	displayuntracked = false
	spellingdictionary = none
[include]
	path = ~/.config/git/local
[init]
	defaultBranch = master
[log]
	decorate = true
	excludeDecoration = refs/branchless/*
[merge]
	autoStash = true
	conflictStyle = diff3
[pager]
	grep = false
[ps1]
	timeout = 0.5
[pull]
	ff = only
[push]
	default = current
[rebase]
	autosquash = true
	autoStash = true
[rerere]
	enabled = true
[sendemail]
	annotate = yes
	confirm = always
[status]
	showUntrackedFiles = no
	submodulesummary = true
[user]
	email = henri@henrimenke.de
	name = Henri Menke
	signingkey = D65C9AFB4C224DA3
