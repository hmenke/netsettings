[module/date]
type = internal/date
interval = 1

;date =
;date-alt = " %Y-%m-%d"
date = "%a %b %d"

;time = %H:%M
;time-alt = %H:%M:%S
time = "%H:%M"

;format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}

label = "%{A1:notify-send "$(date)" "$(cal | sed -e 's|_\(.\)_\(.\)|<u><b>\1\2</b></u>|')":}%date% %time%%{A}"

[module/pulseaudio]
type = internal/pulseaudio

