[alias]
	graph = -c 'log.showSignature=false' log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	# An unsigned version of stash
	ustash = -c commit.gpgsign=false stash
[pull]
	ff = only
[commit]
	gpgsign = true
[gpg]
	program = gpg2
[log]
	decorate = true
	showSignature = true
[status]
	showUntrackedFiles = no
